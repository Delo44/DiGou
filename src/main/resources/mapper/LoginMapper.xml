<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">  
<!-- 指定工作空间，要与接口名相同，源代码没有去看，猜测应该是通过"这里的namespace.下边方法的id"来定位方法的 -->  
<mapper namespace="com.digou.mapper.LoginMapper">  
    
	<!-- update user -->
    <update id="update" parameterType="com.digou.entity.Account">
        UPDATE Account SET username=#{username}, password=#{password}, nickname = #{nickname}, cookie = #{cookie}, isOnline = #{isOnline} WHERE userID=#{userID}
    </update>
    
    <!-- find user -->
    <select id="find" parameterType="String" resultType="com.digou.entity.Account">
        SELECT * FROM Account WHERE username=#{0}
    </select>
</mapper>